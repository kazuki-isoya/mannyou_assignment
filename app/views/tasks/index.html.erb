<p id="notice"><%= notice %></p>

<h1>タスク一覧</h1>

<%= form_with(url: tasks_path, method: :get, local: true) do |f| %>
  <%= f.label(:title, 'タスク名') %>
  <%= f.text_field :title %>
  <%= f.label(:completed, '状態') %>
  <%= f.select :completed, [ ["未着手", 0 ], ["着手中", 1 ], ["完了", 2 ] ] %>
  <%= f.label(:label_id, 'ラベル') %>
  <%= f.select :label_id, Label.all.pluck(:id) %>
  <%= f.submit('検索') %>
<% end %>


<table>
  <thead>
    <tr>
      <th>タスク名</th>
      <th>内容</th>
      <th>終了期限</th>
      <th>状態</th>
      <th>優先順位</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.content %></td>
        <td><%= task.time_limit %></td>
        <td><%= task.completed %></td>
        <td><%= task.priority %></td>
        <div class="button">
          <td>
            <button type="button" class="btn btn-light">
              <%= link_to '詳細', task %>
            </button>
          </td>
          <td>
            <button type="button" class="btn btn-light">
              <%= link_to '編集', edit_task_path(task) %>
            </button>
          </td>
          <td>
            <button type="button" class="text-white btn btn-danger">
              <%= link_to '削除', task, method: :delete, data: { confirm: '削除しますか?' } %>
            </button>
          </td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>


<br>
<nav class="navbar navbar-default navbar-fixed-bottom" role="navigation">
  <%= link_to '新規登録', new_task_path, class: 'btn btn-success btn-lg' %>
  <%= link_to '終了期限でソートする', tasks_path(sort_expired: "true") %>
  <%= link_to '優先順位でソートする', tasks_path(sort_priority: "true") %>
  <%= paginate @tasks %>
</nav>

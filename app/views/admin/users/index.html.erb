<p id="notice"><%= notice %></p>

<h1>ユーザー一覧</h1>

<table>
  <thead>
    <tr>
      <th>ユーザー名</th>
      <th>メールアドレス</th>
      <th>管理者権限</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.admin %></td>
        <td>
          <button type="button" class="btn btn-light">
            <%= link_to '詳細', admin_user_path(user) %>
          </button>
        </td>
        <td>
          <button type="button" class="btn btn-light">
            <%= link_to '編集', edit_admin_user_path(user) %>
          </button>
        </td>
        <td>
          <button type="button" class="text-white btn btn-danger">
            <%= link_to '削除', [:admin, user], method: :delete, data: { confirm: '削除しますか?' } %>
          </button>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'ユーザー新規登録', new_admin_user_path, class: 'btn btn-success btn-lg' %>
